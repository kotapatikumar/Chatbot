<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LOGIN</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body class="homebody">

    <% if(error && error.length ){ %>
        <div class="alert alert-danger  both  alert-dismissible fade show  col-6 offset-3" role="alert">
            Login failed! Please check your username and password.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <%} %>



    <div class="top">
        <img src="/images/chatgpt.png" alt="Error" class="openai">
        <h5 class="heading"><a href="/chatbot" class="anchor  img-fluid" >OPEN AI</a></h5>
    </div>
    <div class="btns" >
        <form action="/login" method="get" >
            <button class="btn login">LOGIN</button>
        </form>
        <form  action="/signup" method="get">
            <button class="btn signup">SIGNUP</button>
        </form>
    </div>
    
    <div>
        <img src="/images/robot.png" alt="Error"  class="robot">
    </div>

    <form class="signupform  row  needs-validation " method="post" action="/login" novalidate >
        <div class="col-lg-3 offset-7 mt-5 col-md-3 col-sm-3  col-2" >
        <label for="username" class="form-label">Username</label>
        <input  type="text" name="username" id="username" class="form-control input" required>
        <div class="invalid-feedback">Please provide a valid Username</div>
        </div>
        <div class="col-lg-3 offset-7 mt-5 col-md-3 col-sm-3 col-2" >
        <label for="password" class="form-label" >password</label>
        <input  type="password" name="password" id="password" class="form-control input" required>
        <div class="invalid-feedback">Please provide a valid Password</div>
        <br><br>
        <button type="submit" class=" signupbtn  input " >Login</button>
        </div>
 </form>


    




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script >
        (() => {
    'use strict'
  
    const forms = document.querySelectorAll('.needs-validation')
  
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
  
        form.classList.add('was-validated')
      }, false)
    })
  })()
    </script>
</body>
</html>